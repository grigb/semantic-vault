# ===============================
# AnythingLLM Admin Key (required if AUTH_MODE=true)
ANYTHINGLLM_INITIAL_ADMIN_KEY={{ANYTHINGLLM_INITIAL_ADMIN_KEY_PLACEHOLDER}}

# ===============================
# Graphiti API Key (required for AnythingLLM/clients to connect)
GRAPHITI_API_KEY={{GRAPHITI_API_KEY_PLACEHOLDER}}

# ===============================
# Neo4j Database (required for Graphiti and direct graph queries)
NEO4J_PASSWORD={{NEO4J_PASSWORD_PLACEHOLDER}}  # Required
NEO4J_USER=neo4j  # Default user, change if needed
NEO4J_URI=bolt://neo4j:7687  # Default URI for Docker Compose

# ===============================
# OpenAI API Key (unused if using local embedding proxy, but required by some tools)
OPENAI_API_KEY="unused"
OPENAI_API_BASE=  # Optional: Set if using a custom OpenAI-compatible endpoint

# ===============================
# Qdrant Vector DB (optional, used if VECTOR_STORE is set to qdrant)
QDRANT_API_KEY=   # Optional: Only if Qdrant is secured
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# ===============================
# Path to your Obsidian vault directory (optional, for document ingestion)
OBSIDIAN_VAULT_PATH="obsidian-vault"

# ===============================
# Notion export configuration (optional)
NOTION_API_KEYS="{{NOTION_API_KEYS_PLACEHOLDER}}"  # Comma-separated if multiple
NOTION_DATABASE_IDS="{{NOTION_DATABASE_IDS_PLACEHOLDER}}"  # Comma-separated if multiple
NOTION_EXPORT_PATH="notion-export"

# ===============================
# (Optional) Postgres settings for Graphiti internal storage
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=graphiti
DB_TYPE=sqlite  # Change to "postgres" if using Postgres
DB_HOST=postgres_db
DB_PORT=5432
DB_NAME=graphiti

# ===============================
# (Optional) AnythingLLM namespace for Graphiti
# MCP_NAMESPACE="anythingllm_default"
